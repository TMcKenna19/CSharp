@{
    ViewData["Title"] = "Home Page";
}

@model Student // This is for validations asp-fro

<div class="text-center">
    <h1>Dojo Survey</h1>

    
    <form asp-action="Process" asp-controller="Home" method="post">
        <div class="form-group">
            <label for="Name">Your Name</label>
            <input asp-for="name" class="form-control">
            <span asp-validation-for="name" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label for="dojoLocation">Dojo Location</label>                     
            <select asp-for="dojoLocation" id="dojoLocation" class="form-control">  @* <--- *@
            <option value="dojoLocation" selected disabled hidden>select</option>
            <option value="sanJose">San Jose</option>
            <option value="la">LA</option>
            <option value="chicago">Chicago</option>
            <span asp-validation-for="dojoLocation" class="text-danger"></span>  @*  <---  *@
            </select>
        </div>


        <div class="form-group">
            <label for="favLang">Favorite Language</label>
            <select name="favLang" id="favlang" class="form-control">
            <option value="" selected disabled hidden>select</option>
            <option value="python">Python</option>Lang
            <option value="javascript">Javascript</option>
            <option value="C#">C#</option>
            </select>
        </div>


        <div class="form-group">
            <label for="text">Comment (optional)</label>
            <textarea name="comment" id="" cols="30" rows="10" class="form-control"></textarea>
        </div>


        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-dark">
        </div>


    </form>
</div>
