@model Hobby

<h1>Create an Activity </h1>
<a class="btn btn-lg btn-primary shadow mb-5" href="/">Home</a>
<div class="text-center">
    <form action="SaveActivity" method="post">
        <div class="form-group">
            <label>Title</label>
            <input asp-for="HobbyTitle" class="form-control">
            <span asp-validation-for="HobbyTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Date / Time</label>
            <input asp-for="HobbyDate" class="form-control">
            <span asp-validation-for="HobbyDate" class="text-danger"></span>
        </div>
        @* <div class="form-group">
            <label for="HobbyDate">Date</label>
            <input type="date" name="HobbyDate">
            <span asp-validation-for="chefDob"></span>
        </div> *@
        <div class="form-group">
            <label for="HobbyDuration">Duration</label>
            <input asp-for="HobbyDuration" name="HobbyDuration">
            @* <span asp-validation-for="HobbyDuration"></span> *@
        </div>
         <div>
            <label for="HobbyDurationTime"></label>
            <select asp-for="HobbyDurationTime" id="HobbyDurationTime">
            <option value="minutes">Minutes</option>
            <option value="hours">Hours</option>
            </select>
            <span asp-validation-for="HobbyDurationTime" class="text-danger"></span>
        </div>
        <div>
            <label for="text">Description</label>
            <textarea name="Description" id="" cols="30" rows="10"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" class="btn btn-lg btn-dark shadow mb-5" value="Create Activity">
        </div>
    </form>
</div>