@model Product


<h1>@Model.prodName</h1>
<ul>
    @{
        foreach(Association a in Model.AssociationsList)
        {
            <li>@a.Category.catName</li>
        }
    }
</ul>

<form action="addProdToCat" method="post">
    <div class="form-group">
        <label for="CategoryId">Add a Product to a Category</label>
        <select name="CategoryId" class="form-control col-4">
            @{
                foreach(Category c in ViewBag.allCategories)
                {
                <option value="@c.CategoryId">@c.catName</option>
                }
            }

        </select>
    </div>
    <input type="hidden" name="ProductId" value="@Model.ProductId">
    <button type="submit" class="btn btn-dark" class="Add Product">Add Category</button>
</form>

