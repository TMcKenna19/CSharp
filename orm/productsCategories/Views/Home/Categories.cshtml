@model Category

<h1 class="text-center">Categories | <a href="/">Products</a></h1>

<div class="text-center row">
        <div class="col-8">
        <h2>New Catagory</h2>
        <form action="addCategory" method="post">
            <div class="form-group">
                <label for="catName">Name</label>
                <input asp-for="catName" class="form-control">
                <span asp-validation-for="catName"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark" class="Add Product">Create</button>
            </div>
        </form>
    </div>
    <div class="col-4">
        <h2>Existing Categories</h2>
        @{
            foreach(Category c in ViewBag.allCategories)
            {
                <p>@c.catName</p>
            }
        }
    </div>

</div>