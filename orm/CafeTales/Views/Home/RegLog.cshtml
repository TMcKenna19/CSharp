@model User

<div class="row">
    <div class="col-6">
        <div class="form-group">
            <h1>Register</h1>
            <form action="register" method="post">
                <div class="form-group">
                    <label>First Name</label>
                    <input asp-for="UserFirstName" class="form-control">
                    <span asp-validation-for="UserFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="UserEmail" class="form-control">
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input asp-for="confirm" class="form-control">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info">
                </div>
            </form>
        </div>
        </div>

        <div class="col-6">
            <partial name="_LogInUser" />
        </div>
    </div>
</div>